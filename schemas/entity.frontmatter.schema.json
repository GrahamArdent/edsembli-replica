{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/entity.frontmatter.schema.json",
  "title": "Entity Front Matter",
  "type": "object",
  "required": ["id", "type", "entity_type", "title", "version", "status", "tags", "refs", "updated"],
  "properties": {
    "id": {"type": "string", "pattern": "^entity\\.[a-z0-9_\\.]+$"},
    "type": {"const": "entity"},
    "entity_type": {"type": "string"},
    "title": {"type": "string", "minLength": 1},
    "version": {"type": "string", "minLength": 1},
    "status": {"type": "string", "enum": ["draft", "stable", "deprecated"]},
    "tags": {"type": "array", "items": {"type": "string"}},
    "refs": {"type": "array", "items": {"type": "string", "pattern": "^ref\\.[a-z0-9_\\.]+$"}},
    "updated": {"type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$"}
  },
  "additionalProperties": true
}
