{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/evidence_patterns.schema.json",
  "$version": "1.0.0",
  "title": "Evidence Patterns",
  "type": "object",
  "required": ["id", "type", "frame", "title", "version", "status", "tags", "indicators", "refs", "updated"],
  "properties": {
    "id": {"type": "string", "pattern": "^evidence\\.pattern\\.[a-z0-9_\\.]+$"},
    "type": {"const": "evidence_pattern"},
    "frame": {"type": "string", "pattern": "^frame\\.[a-z0-9_]+$"},
    "title": {"type": "string", "minLength": 1},
    "version": {"type": "string", "minLength": 1},
    "status": {"type": "string", "enum": ["draft", "stable", "deprecated"]},
    "tags": {"type": "array", "items": {"type": "string"}},
    "indicators": {
      "type": "array",
      "items": {"type": "string", "pattern": "^indicator\\.[a-z0-9_\\.]+$"},
      "minItems": 1
    },
    "refs": {
      "type": "array",
      "items": {"type": "string", "pattern": "^ref\\.[a-z0-9_\\.]+$"}
    },
    "updated": {"type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$"}
  },
  "additionalProperties": true
}
