{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/frames.schema.json",
  "title": "Frames Taxonomy",
  "type": "object",
  "required": ["frames"],
  "properties": {
    "frames": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "col_sections"],
        "properties": {
          "id": {"type": "string", "pattern": "^frame\\.[a-z0-9_\\.]+$"},
          "name": {"type": "string"},
          "short_name": {"type": "string"},
          "description": {"type": "string"},
          "col_sections": {
            "type": "array",
            "items": {"type": "string", "enum": ["key_learning", "growth", "next_steps"]}
          },
          "indicators": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "description"],
              "properties": {
                "id": {"type": "string", "pattern": "^indicator\\.[a-z0-9_\\.]+$"},
                "description": {"type": "string"}
              },
              "additionalProperties": true
            }
          },
          "refs": {"type": "array", "items": {"type": "string", "pattern": "^ref\\.[a-z0-9_\\.]+$"}}
        },
        "additionalProperties": true
      }
    },
    "_meta": {"type": "object"}
  },
  "additionalProperties": true
}
