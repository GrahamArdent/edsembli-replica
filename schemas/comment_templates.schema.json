{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/comment_templates.schema.json",
  "title": "Comment Templates Library",
  "type": "object",
  "required": ["templates"],
  "properties": {
    "templates": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "frame", "section", "tone", "slots", "text", "indicators", "refs", "status", "version"],
        "properties": {
          "id": {"type": "string", "pattern": "^template\\.comment\\.[a-z0-9_\\.]+$"},
          "type": {"const": "comment_template"},
          "frame": {"type": "string", "pattern": "^frame\\.[a-z0-9_\\.]+$"},
          "section": {"type": "string", "enum": ["key_learning", "growth", "next_steps"]},
          "tone": {"type": "string"},
          "slots": {"type": "array", "items": {"type": "string"}},
          "text": {"type": "string"},
          "indicators": {"type": "array", "items": {"type": "string", "pattern": "^indicator\\.[a-z0-9_\\.]+$"}},
          "notes": {"type": "string"},
          "refs": {"type": "array", "items": {"type": "string", "pattern": "^ref\\.[a-z0-9_\\.]+$"}},
          "status": {"type": "string", "enum": ["draft", "stable", "deprecated"]},
          "version": {"type": "string"}
        },
        "additionalProperties": true
      }
    },
    "_meta": {"type": "object"}
  },
  "additionalProperties": true
}
