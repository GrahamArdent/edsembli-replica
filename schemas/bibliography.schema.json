{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/bibliography.schema.json",
  "title": "Bibliography",
  "type": "object",
  "required": ["references"],
  "properties": {
    "references": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "title"],
        "properties": {
          "id": {"type": "string", "pattern": "^ref\\.[a-z0-9_\\.]+$"},
          "type": {"type": "string"},
          "title": {"type": "string"},
          "author": {"type": ["string", "null"]},
          "year": {"type": ["integer", "null"]},
          "url": {"type": ["string", "null"]},
          "notes": {"type": ["string", "null"]},
          "tags": {"type": "array", "items": {"type": "string"}}
        },
        "additionalProperties": true
      }
    },
    "_meta": {"type": "object"}
  },
  "additionalProperties": true
}
