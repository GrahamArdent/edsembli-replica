{
  "$schema": "https://specs.frictionlessdata.io/schemas/table-schema.json",
  "name": "traceability-matrix",
  "title": "Traceability Matrix",
  "description": "Links Frames → Indicators → Evidence Patterns → Comment Templates → References.",
  "fields": [
    {"name": "frame_id", "type": "string", "constraints": {"required": true}},
    {"name": "frame_name", "type": "string"},
    {"name": "indicator_id", "type": "string", "constraints": {"required": true}},
    {"name": "indicator_name", "type": "string"},
    {"name": "evidence_pattern_id", "type": "string"},
    {"name": "evidence_pattern_title", "type": "string"},
    {"name": "template_id", "type": "string", "constraints": {"required": true}},
    {"name": "section", "type": "string", "constraints": {"required": true}},
    {
      "name": "ref_ids",
      "type": "string",
      "description": "JSON-encoded list of reference IDs"
    },
    {"name": "generated", "type": "date", "constraints": {"required": true}}
  ],
  "primaryKey": ["template_id", "indicator_id"]
}
