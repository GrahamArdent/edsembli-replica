{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/tags.schema.json",
  "$version": "1.0.0",
  "title": "Controlled Vocabulary Tags",
  "type": "object",
  "required": ["tags"],
  "properties": {
    "tags": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "description"],
        "properties": {
          "id": {"type": "string", "pattern": "^tag\\.[a-z0-9_]+$"},
          "name": {"type": "string"},
          "name_fr": {"type": "string"},
          "description": {"type": "string"},
          "description_fr": {"type": "string"},
          "usage": {"type": "string"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
